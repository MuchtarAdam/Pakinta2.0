<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_home_service_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_3sdp">

                <TextView
                    android:id="@+id/tv_home_service_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemeliharaan"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_home_service_description"
                    android:layout_width="@dimen/_195sdp"
                    android:layout_height="wrap_content"
                    android:text="Layanan perbaikan rumah, mulai dari survei hingga pengerjaan"
                    android:textSize="@dimen/_10ssp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_home_service_arrow"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>