<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_7sdp">

    <TextView
        android:id="@+id/tv_specialist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kernet"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_7sdp">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.300.000"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/hari/orang"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@id/tv_price"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_9ssp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/iv_min"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/round_indeterminate_check_box_24"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_amount_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="@dimen/_12ssp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:src="@drawable/hm_line"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/baseline_add_box_24"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membantu semua pekerjaan tukang dan melakukan pekerjaan persiapan"
        android:textSize="@dimen/_9ssp"
        android:layout_marginBottom="@dimen/_7sdp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:src="@drawable/hm_line"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>