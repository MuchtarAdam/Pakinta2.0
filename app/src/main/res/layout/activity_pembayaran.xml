<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PembayaranActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_topbar_pembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_15sdp"
        android:gravity="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <ImageView
            android:id="@+id/btn_back_pick_worker"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/round_arrow_back_24"
            android:layout_marginEnd="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembayaran"
            android:textSize="@dimen/_12ssp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/line_pilih_pekerja"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:src="@drawable/hm_line"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_below="@+id/ll_topbar_pembayaran"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/sv_container_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_above="@id/bottom_result_bar"
        android:layout_below="@+id/line_pilih_pekerja">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran"
                android:textStyle="bold"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_7sdp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/search_view_bg"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_15sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:src="@drawable/outline_card_membership_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Metode Pembayaran"
                    android:layout_weight="2"/>

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:src="@drawable/baseline_arrow_forward_ios_24"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringkasan Pembayaran"
                android:textStyle="bold"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_7sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp"
                android:background="@drawable/search_view_bg"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_50sdp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0"
                    android:layout_gravity="top">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/_15sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi Pekerjaan"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginBottom="@dimen/_5sdp"/>
                        <TextView
                            android:id="@+id/tv_description_work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="top">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginBottom="@dimen/_5sdp"/>
                        <TextView
                            android:id="@+id/tv_description_price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:layout_gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keterangan"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginBottom="@dimen/_5sdp"/>
                        <TextView
                            android:id="@+id/tv_description_work_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilih Metode Pembayaran"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="right|top">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:text=" Harga"/>
                        <TextView
                            android:id="@+id/tv_description_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilih Metode Pembayaran"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_result_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:layout_weight="0"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Pembayaran"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp."
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_2sdp"/>
                <TextView
                    android:id="@+id/tv_total_price_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:text="0"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_payment_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Bayar"
            android:layout_weight="2"
            android:backgroundTint="@color/black" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rv_container_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terima Kasih Telah Mesan Jasa Kami"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_back_to_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali ke Home"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:backgroundTint="@color/black"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>